.container
  - if @user.profile.blank?
    .alert.alert-danger
      Looks like you haven't fill up your profile details. Please complete your profile first
  .row
    .col-md-3.col-avatar
      = image_tag big_avatar_url(current_user), alt: "#{current_user.username}", class: "img-rounded"
    .col-md-9
      = link_to "Edit Profile", edit_profile_path, class: "btn btn-xs btn-primary"
      %h1
        = @user.profile.try(:fname)
        = @user.profile.try(:lname)
        %em.small= @user.username
      %h4
        = @user.profile.try(:address1)
        = @user.profile.try(:address2)
        = @user.profile.try(:postcode)
        = @user.profile.try(:city)
        = @user.profile.try(:state)
        = @user.profile.try(:country)
      .row
        .col-md-6
          %h4
            %strong Phone Number:
            = @user.profile.try(:phone_number)
        .col-md-6
          %h4
            %strong Email Address:
            = @user.email
  %hr
