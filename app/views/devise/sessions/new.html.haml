%section#login-form
  .container
    .row
      .col-md-4.col-md-offset-4
        .form-box
          .page-header
            %h2.text-center Log In
            %hr
            = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
              .form-group
                = f.text_field :login, class: "form-control input-lg", autofocus: true, placeholder: "Username or email address"
              .form-group
                = f.password_field :password, class: "form-control input-lg", autocomplete: "off", placeholder: "Password"
              - if devise_mapping.rememberable?
                .form-group
                  .checkbox
                    %label #{f.check_box :remember_me} Remember me for 2 weeks
              .form-group
                = f.submit "Log in", class: "btn btn-primary btn-lg btn-block"
            .text-center= link_to "Forgot password?", new_user_password_path, class: "btn btn-link btn-xs"
        %p.text-center Don't have an account? #{link_to "Sign Up", register_path}
