%section#register-form
  .container
    .row
      .col-md-4.col-md-offset-4
        .form-box
          .page-header
            %h2.text-center Sign Up
            %hr
            = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
              = devise_error_messages!
              .form-group
                = f.text_field :username, class: "form-control input-lg", placeholder: "Username"
              .form-group
                = f.email_field :email, class: "form-control input-lg", placeholder: "Email Address"
              .form-group
                = f.password_field :password, autocomplete: "off", class: "form-control input-lg", placeholder: "Password"
              .form-group
                = f.password_field :password_confirmation, autocomplete: "off", class: "form-control input-lg", placeholder: "Password Confirmation"
                / - if @validatable
                /   %p.pull-right.help-block{style: "color: #333333;"}
                /     %small #{@minimum_password_length} characters minimum
              .form-group
                = f.submit "Sign Up", class: "btn btn-primary btn-lg btn-block"
            .text-center
              %small By signing up, you agree to the #{link_to "Terms of Service", "#"}
        %p.text-center Already have an account? #{link_to "Log In", login_path}
